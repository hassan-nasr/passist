    <Command Name="relativeAlarmTimeSetHourMinute">
      <Example>wake me up in 2 hour and 3 minutes</Example>
      <ListenFor> {alarmf}  in {number} hours and {number2} minutes</ListenFor>
      <Feedback>Sure! Setting the alarm clock for {number} hours and {number2} minutes</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>
    <Command Name="relativeAlarmTimeSetMinute">
      <Example>notify me in 40 minutes</Example>
      <ListenFor> {alarmf}  in {number2} minutes </ListenFor>
      <Feedback>Sure! Setting the alarm clock for {number2} minute</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>
    <Command Name="relativeAlarmTimeSetHour">
      <Example>alarm me in half an hour</Example>
      <ListenFor> {alarmf}  in {number} hours </ListenFor>
      <Feedback>Sure! Setting the alarm clock for {number} hour</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="actionReminder_contact_day_dayPart">
      <Example>remind me to call mom on tomorow afternoon</Example>
      <ListenFor> reminde me to {reminderAction} {contactLoos} [on] {day} {dayPart} </ListenFor>
      <ListenFor> reminde me to {reminderAction} {contactLoos} [on] {day} </ListenFor>
<!--      <ListenFor> reminde me to {reminderAction} {contactLoos} {timeProp} {dayPart} </ListenFor>-->
      <Feedback>Sure! I'll remind you to {reminderAction} {contactLoos} on {day} </Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="actionReminder_contact_date">
      <Example>remind me to call mom on tomorow afternoon</Example>
      <ListenFor> reminde me to {reminderAction} {contactLoos} [on] {month} {number} {dayPart} </ListenFor>
      <ListenFor> reminde me to {reminderAction} {contactLoos} [on] {number} [of] {month} [in the] {dayPart}</ListenFor>
      <ListenFor> reminde me to {reminderAction} {contactLoos} [on] {month} {number} </ListenFor>
      <ListenFor> reminde me to {reminderAction} {contactLoos} [on] {number} [of] {month} </ListenFor>
      <Feedback>Sure! I'll remind you to {reminderAction} {contactLoos} on {month} {number} </Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

