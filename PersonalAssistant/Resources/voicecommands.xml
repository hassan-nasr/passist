    <Example>Tell me my next appointment</Example>

    <Command Name="time">
      <Example>Tell Me the Time</Example>
      <ListenFor>[Tell Me] [About] [the] time {*}</ListenFor>
      <ListenFor> what time is it?</ListenFor>
      <Feedback>Yes Time. I'll check it</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>


